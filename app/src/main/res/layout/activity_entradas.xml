<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#48AFB0B1">

    <!-- Contenedor principal de la vista -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Imagen de regreso con estilo de botón -->
        <ImageView
            android:id="@+id/regreso"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="start"
            android:contentDescription="Botón Atras"
            android:src="@drawable/atras"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"/>

        <!-- Título -->
        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entradas Compradas"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"/>

        <!-- Texto con la lista de usuarios -->
        <TextView
            android:id="@+id/tv_entradas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cargando entradas..."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:textColor="#555555"
            android:gravity="start"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

</ScrollView>
