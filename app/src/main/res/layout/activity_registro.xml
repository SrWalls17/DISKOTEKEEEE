<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1988F1E8"
    tools:context=".Registro">

    <!-- Animation at the top -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView2"
        android:layout_width="227dp"
        android:layout_height="107dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="animation1.json"
        app:lottie_loop="true" />

    <!-- Nombre input -->
    <EditText
        android:id="@+id/txtnombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lottieAnimationView2"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="20dp"
        android:hint="Nombres"
        android:inputType="text" />

    <!-- Apellido input -->
    <EditText
        android:id="@+id/txtapellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtnombre"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="10dp"
        android:hint="Apellidos"
        android:inputType="text" />

    <!-- Correo input -->
    <EditText
        android:id="@+id/txtemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtapellido"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="10dp"
        android:hint="Correo: ej@dominio.com"
        android:inputType="textEmailAddress" />

    <!-- Contraseña input -->
    <EditText
        android:id="@+id/txtclave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtemail"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="10dp"
        android:hint="Contraseña"
        android:inputType="textPassword" />

    <!-- Repetir Contraseña input -->
    <EditText
        android:id="@+id/txtclave2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtclave"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="10dp"
        android:hint="Rep. Contraseña"
        android:inputType="textPassword" />

    <!-- Switch Match -->
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtclave2"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="¿Mostrar Perfil en Match?" />

    <!-- Switch Amistades -->

    <Switch
        android:id="@+id/switch_match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtclave2"
        android:layout_marginStart="65dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/textView6" />

    <!-- Botón de Registro -->

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_match"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:text="¿Mostrar Perfil en Amistades?" />

    <Switch
        android:id="@+id/switch_amistades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch_match"
        android:layout_marginStart="34dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/textView9" />
    <!-- Foto de perfil -->

    <Button
        android:id="@+id/btn_registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_amistades"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="REGISTRAR" />

    <!-- Botón para regresar -->
    <!-- Pie de página -->

    <ImageView
        android:id="@+id/regreso"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="start"
        android:contentDescription="Botón Atras"
        android:padding="16dp"
        android:src="@drawable/atras" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="walls.cl" />

</RelativeLayout>
