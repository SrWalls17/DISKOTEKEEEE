<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/eventos_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Bombofica Event -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/image_bombofica"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/bombofica" />

            <TextView
                android:id="@+id/text_bombofica"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Evento: Bombofica\nDescripci贸n: Chistes y comedia\nPrecio:$10.000"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkbox_bombofica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Banda Tropical Event -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/image_bandatropical"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/bandatropical" />

            <TextView
                android:id="@+id/text_bandatropical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Evento: Banda Tropical\nDescripci贸n: Cumbia\nPrecio:$10.000"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkbox_bandatropical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Franco El Gorila Event -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/image_francoelgorila"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/francoelgorila" />

            <TextView
                android:id="@+id/text_francoelgorila"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Evento: Franco El Gorila\nDescripci贸n: Reggaeton\nPrecio:$10.000"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkbox_francoelgorila"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Precio total -->
        <TextView
            android:id="@+id/text_precio_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio Total: $0"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:textColor="#FF5722"/>

        <!-- Bot贸n Comprar -->
        <Button
            android:id="@+id/button_comprar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comprar"
            android:padding="16dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
